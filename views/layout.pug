doctype html
html
  head
    title Magic Bamba Game
    link(rel='icon' href='/favicon.ico' type='image/vnd.microsoft.icon')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/pixi.js/6.0.0/browser/pixi.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    // nav start
    nav#navbar.navbar.sticky-top.navbar-expand.navbar-dark.bg-dark.fixed-top
      .collapse.navbar-collapse
        ul.mr-auto.navbar-nav
          li.nav-item(class=view==='index'?'active':'')
            a.nav-link(href='/')
              i.bi.bi-house
              |  Home
          li.nav-item(class=view==='game'?'active':'')
            a.nav-link(href='/game')
              i.bi.bi-play-circle
              |  Game
          li.nav-item
            a.nav-link(href='https://github.com/dvirberlo/magic-bamba' target='_blank')
              i.bi.bi-cloud-download
              |  Source on GitHub
        // nav details
        if view==='game'
          ul#navDetails.navbar-nav(style='display: none;')
            li.nav-item.navbar-text.mx-1.text-warning
              i.bi.bi-lightbulb
              span#navLights  ?
            li.nav-item.navbar-text.mx-1.text-info
              i.bi.bi-gem
              span#navGems  ?
            li.nav-item.navbar-text.mx-1.text-danger
              i.bi.bi-flower1
              span#navFlowers  ?
            li.nav-item.navbar-text.ml-3
              i.bi.bi-person-fill
              span#navXp  ?
            li.nav-item.navbar-text.ml-2
              i.bi.bi-person-fill
              span#navUsername  ?
    // nav end
    block content
